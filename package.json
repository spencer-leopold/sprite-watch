    "url2": "^1.0.3",
    "yargs": "^3.15.0"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "chai-as-promised": "^5.1.0",
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.15",
    "jshint": "^2.8.0",
