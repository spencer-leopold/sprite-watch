    "type": "git",
    "url": "git@github.com:spencer-leopold/spritegen-sheets.git"
  },
  "keywords": [
    "sprites",
    "spritesmith",
    "watch",
    "multiple",
    "directories"
  ],
  "author": {
    "name": "Spencer Leopold",
    "email": "spencer.leopold@gmail.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/spencer-leopold/spritegen-sheets/issues"
  },
  "homepage": "https://github.com/spencer-leopold/spritegen-sheets",
  "bin": {
    "spritegen-sheets": "./bin.js"
  },
  "dependencies": {
    "bluebird": "^2.9.32",
    "chalk": "^1.1.0",
    "chokidar": "^1.0.1",
    "glob": "^5.0.13",
    "gmsmith": "^0.5.0",
    "object-assign": "^3.0.0",
    "shelljs": "^0.3.0",
    "spritesheet-templates": "^8.2.0",
