${{#spritesheet}}{{container}}{{/spritesheet}}: (
  {{#items}}
  '{{name}}-width': {{width}}px,
  '{{name}}-height': {{height}}px,
  {{/items}}
);

@font-face {
  font-family: '{{#spritesheet}}{{container}}{{/spritesheet}}';
  src: url('{{#spritesheet}}{{image}}{{/spritesheet}}.eot?date={{#spritesheet}}{{cacheBuster}}{{/spritesheet}}C');
  src: local('â˜º'),
       url('{{#spritesheet}}{{image}}{{/spritesheet}}.eot?date={{#spritesheet}}{{cacheBuster}}{{/spritesheet}}') format('embedded-opentype'),
       url('{{#spritesheet}}{{image}}{{/spritesheet}}.woff?date={{#spritesheet}}{{cacheBuster}}{{/spritesheet}}') format('woff'),
       url('{{#spritesheet}}{{image}}{{/spritesheet}}.ttf?date={{#spritesheet}}{{cacheBuster}}{{/spritesheet}}') format('truetype'),
       url('{{#spritesheet}}{{image}}{{/spritesheet}}.svg?date={{#spritesheet}}{{cacheBuster}}{{/spritesheet}}') format('svg');
}

{{#items}}
%{{#with ../spritesheet}}{{container}}{{/with}}--{{name}}-dimensions,
.{{#with ../spritesheet}}{{container}}{{/with}}--{{name}}-dimensions {
  width: {{width}}px;
  height: {{height}}px;
}

%{{#with ../spritesheet}}{{container}}{{/with}}--{{name}},
.{{#with ../spritesheet}}{{container}}{{/with}}--{{name}} {
  &:before {
    font-family: '{{#with ../spritesheet}}{{container}}{{/with}}';
    content: '{{unicode}}';
  }
}

@mixin {{#with ../spritesheet}}{{container}}{{/with}}--{{name}} {
  &:before {
    font-family: '{{#with ../spritesheet}}{{container}}{{/with}}';
    content: '{{unicode}}';
    @content;
  }
}

%{{#with ../spritesheet}}{{container}}{{/with}}--{{name}}-after,
.{{#with ../spritesheet}}{{container}}{{/with}}--{{name}}-after {
  &:after {
    font-family: '{{#with ../spritesheet}}{{container}}{{/with}}';
    content: '{{unicode}}';
  }
}

@mixin {{#with ../spritesheet}}{{container}}{{/with}}--{{name}}-after {
  &:after {
    font-family: '{{#with ../spritesheet}}{{container}}{{/with}}';
    content: '{{unicode}}';
    @content;
  }
}
{{/items}}

{{#spritesheet}}
@function {{container}}-width($imgName) {
  @return map-get(${{container}}, "#{$imgName}-width");
}

@function {{container}}-height($imgName) {
  @return map-get(${{container}}, "#{$imgName}-height");
}
{{/spritesheet}}
